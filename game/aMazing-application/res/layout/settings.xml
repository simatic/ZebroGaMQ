<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:src="@drawable/setting_back" android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/music"
                    style="@style/MenuFont"
                    android:gravity="center_horizontal"
                    android:text="Sound on"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/time"
                    style="@style/MenuFont"
                    android:gravity="center_horizontal"
                    android:text="Time: 15 min"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/district"
                    style="@style/MenuFont"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="District: 400m"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/crown"
                    style="@style/MenuFont"
                    android:gravity="center_horizontal"
                    android:text="Crown: 3"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/item"
                    style="@style/MenuFont"
                    android:gravity="center_horizontal"
                    android:text="Item: 15"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <TextView
                android:id="@+id/back"
                style="@style/SystemFont"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="59dp"
                android:gravity="center_horizontal"
                android:text="BACK"
                android:textColor="#FFFFFF" />

</RelativeLayout>
